{
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"compilerOptions": {
		"rootDir": "./src",
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./dist",
		"moduleResolution": "node",
		"baseUrl": "src/",
		"paths": {
			"@/*": ["./*"]
		},
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./@types/", "./node_modules/@types/"]
	},
	"include": ["src/**/*.ts"]
}
